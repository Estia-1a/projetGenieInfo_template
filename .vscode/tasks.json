{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"label": "Custom build",
			"command": "C:\\MinGW\\bin\\gcc.exe",
			"args": [
				"-g",
				"${fileDirname}\\**.c",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-I${workspaceFolder}/estia-image/include/",
				"-L${workspaceFolder}/estia-image/lib/",
				"-lestia-image",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
		
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\gcc.exe"
		},
		{
			"type": "shell",
			"label": "Estia: Validate your installation",
			"command": "./validconfig.sh",
	
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"detail": "Run a series of tests to be sure everything is ok. First set terminal to bash with <Select Default Shell>"
		}
	]
}
